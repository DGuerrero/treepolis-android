<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--   app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/primary_dark</item>

        <!--   theme primary text white -->
        <item name="android:textColorPrimary">@android:color/darker_gray</item>

        <item name="android:windowActionBar">false</item>

    </style>

    <style name="Treepolis.Button" parent="android:Widget.Button" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:src">@android:drawable/ic_input_add</item>
        <item name="android:background">@color/primary</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

</resources>
